<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_weight="1"
        android:text="@string/edittext"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/butClear"
                android:onClick="clickClear"
                android:text="Clear"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
            />
            <Button
                android:id="@+id/butPlusMinus"
                android:onClick="clickNumber"
                android:text="+/-"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />
            <Button
                android:id="@+id/butDivide"
                android:onClick="operation"
                android:text="/"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />
            <Button
                android:id="@+id/butMultiply"
                android:onClick="operation"
                android:text="*"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />
    </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/but7"
                android:onClick="clickNumber"
                android:text="7"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />
            <Button
                android:id="@+id/but8"
                android:onClick="clickNumber"
                android:text="8"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />
            <Button
                android:id="@+id/but9"
                android:onClick="clickNumber"
                android:text="9"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />
            <Button
                android:id="@+id/butPercent"
                android:onClick="operation"
                android:text="%"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/but4"
                android:onClick="clickNumber"
                android:text="4"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />
            <Button
                android:id="@+id/but5"
                android:onClick="clickNumber"
                android:text="5"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />
            <Button
                android:id="@+id/but6"
                android:onClick="clickNumber"
                android:text="6"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />
            <Button
                android:id="@+id/butPlus"
                android:onClick="operation"
                android:text="+"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/but1"
                android:onClick="clickNumber"
                android:text="1"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />
            <Button
                android:id="@+id/but2"
                android:onClick="clickNumber"
                android:text="2"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />
            <Button
                android:id="@+id/but3"
                android:onClick="clickNumber"
                android:text="3"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />
            <Button
                android:id="@+id/butMinus"
                android:onClick="operation"
                android:text="-"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/but0"
                android:onClick="clickNumber"
                android:text="0"
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="8.5"
                android:layout_marginRight="1sp"
                />
            <Button
                android:id="@+id/butDot"
                android:onClick="clickNumber"
                android:text="."
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />
            <Button
                android:id="@+id/butEqual"
                android:onClick="clickEqual"
                android:text="="
                android:height="80sp"
                android:width="30sp"
                android:layout_weight="1"
                android:layout_marginRight="1sp"
                />

        </TableRow>
    </TableLayout>


</LinearLayout>